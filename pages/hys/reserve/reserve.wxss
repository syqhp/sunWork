.content{
  width: 100%;
  position: relative;
  overflow: hidden;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.schedule-top{
  border-top:0.5rpx solid #24C2B5;
  border-bottom:0.5rpx solid #24C2B5;
  width: 100%;
   overflow: scroll; 
   -webkit-overflow-scrolling:touch;
   white-space: nowrap;
  margin: 20rpx 0;
  font-size: 0;

}
.schedule-col{
  border-left: 1rpx solid #24C2B5;
  width: 99.928571rpx;
  height: 120rpx;
  text-align: center;
  display: inline-block;
}
.schedule-col.active{
  background: #24C2B5;
}
.schedule-col:last-child{
  border-right: 1rpx solid #24C2B5;
}
.schedule-col-t{
  margin-top: 15rpx;
  font-size: 34rpx;
  font-weight: 500;
  color: #000;
}
.schedule-col-t.active,.schedule-col-b.active{
  color: #fff !important;
}
.schedule-col-b{
  font-size: 24rpx;
  color: #24C2B5;
}

.schedule-bottom{
  margin-bottom: 20rpx;
  border:0.5rpx solid #24C2B5;
}
.schedule-title{
  display: flex;
  flex-direction:row;
  height: 90rpx;
  line-height: 90rpx;
  background: #F7F7F7;
  border-bottom:0.5rpx solid #24C2B5;

}
.schedule-title-l{
  background: #24C2B5;
  color: #fff;
  width: 100rpx;
  text-align: center;

}
.schedule-title-r{
  font-size: 26rpx;
  text-align: center;
  flex: 1;
  border-left: 2rpx solid #24C2B5;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


.schedule-main{
  margin: 20rpx 0;

}
.schedule-row{
  display: flex;
}
.schedule-row:last-child .schedule-right-r:last-child{
  height: 0;
}
.schedule-row:last-child .schedule-right-r:first-child{
  height: 1rpx;
}
.schedule-row:last-child .line{
  display: none;
}
.schedule-left{
  width: 100rpx;
  text-align: right;
  font-size: 26rpx;
  color: #24C2B5;
  padding-right: 10rpx;
  box-sizing: border-box;
  margin-top: -20rpx;
}

.schedule-right{
  border-top:0.5rpx solid #24C2B5;
  flex: 1;
}
.schedule-right-r{
  height: 50rpx;
}
.schedule-row:nth-child(2n) .schedule-left{
  display: none;
}
.schedule-row:nth-child(2n) .schedule-right{
  margin-left: 100rpx;
  border-top: 2rpx dotted #24C2B5;
}
.schedule-right-r.active{
  background: #24C2B5
}
.schedule-right-r.active{
  background: #91E0D9;
  border-left: 0.5rpx solid #24C2B5;
}
.line{border: 0.25rpx dotted #24C2B5;}
.schedule-footer{
  margin:20rpx;
  background: #24C2B5;
  color: #fff;
  opacity: 0.5;
  border-radius: 8rpx;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}
.schedule-footer.active{
  opacity: 1;
}