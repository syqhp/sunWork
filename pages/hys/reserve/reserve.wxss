.content{
  position: fixed;
  top: 0;
  left: 20rpx;
  right: 20rpx;
  overflow: hidden;
  box-sizing:content-box;
}
.content swiper{
  position: fixed;
  top: 0;
  left: 20rpx;
  right: 20rpx;
  overflow: hidden;
  box-sizing: content-box;
}
.schedule-top{
  border-top:0.5rpx solid #24C2B5;
  border-bottom:0.5rpx solid #24C2B5;
  width: 100%;
   /* overflow: scroll;  */
   /* -webkit-overflow-scrolling:touch;*/
  white-space: nowrap; 
  margin: 20rpx 0;
  font-size: 0;
  height: 120rpx !important;

}
.schedule-col{
   border-left: 1rpx solid #24C2B5;
  width: 14.28%;
  height: 120rpx;
  text-align: center;
  display: inline-block;
  box-sizing: border-box;
}
.schedule-col.active{
  background: #24C2B5;
}
.schedule-col:last-child{
  border-right: 1rpx solid #24C2B5;
}
.schedule-col-t{
  margin-top: 15rpx;
  font-size: 34rpx;
  font-weight: 500;
  color: #000;
}
.schedule-col-t.active,.schedule-col-b.active{
  color: #fff !important;
}
.schedule-col-b{
  font-size: 24rpx;
  color: #24C2B5;
}

.schedule-bottom{
  margin-bottom: 20rpx;
  border:0.5rpx solid #24C2B5;
  position:fixed;
  left: 20rpx;
  right: 18rpx;
  top: 163rpx;
  bottom: 100rpx;
  overflow: scroll;
}
.schedule-title{
  display: flex;
  flex-direction:row;
  height: 90rpx;
  line-height: 90rpx;
  background: #F7F7F7;
  border-bottom:0.5rpx solid #24C2B5;
  position:fixed;
  left: 20rpx;
  right: 20rpx;
  top: 164rpx;
}
.schedule-title-l{
  background: #24C2B5;
  color: #fff;
  width: 100rpx;
  text-align: center;

}
.schedule-title-r{
  font-size: 26rpx;
  text-align: center;
  flex: 1;
  border-left: 2rpx solid #24C2B5;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


.schedule-main{
  padding-top: 92rpx;
-webkit-overflow-scrolling:touch;
}

.schedule-row{
  display: flex;
}
.schedule-left{
  width: 100rpx;
  text-align: right;
  font-size: 26rpx;
  color: #24C2B5;
  box-sizing: border-box;
  
}
.schedule-left-col{
   width: 100rpx;
   height: 100rpx;
   padding-right:10rpx;
  box-sizing: border-box;
}
.schedule-right{
  border-top:0.5rpx solid #24C2B5;
  flex: 1;
  border-right: 2rpx solid #24C2B5;
  margin-top: 20rpx;
}
.schedule-right:last-child{
  border-right:none;
}
.schedule-right-col{
  height: 50rpx;
  border-top: 2rpx solid #24C2B5;
  box-sizing: border-box;
}
.schedule-right-col:nth-child(2n){
  border-top: 2rpx dotted #24C2B5;
  box-sizing: border-box;
}
.schedule-right-col.active{
  background: #40f3e4
}
.schedule-right-col.active1{
 background: #eee
}
.schedule-right-col.active2{
   background: #e3e3e3
}
.schedule-right-col.active3{
   background: #666
}

.schedule-right-r.active{
  background: #91E0D9;
  border-left: 0.5rpx solid #24C2B5;
}
.line{border: 0.25rpx dotted #24C2B5;}
.schedule-footer{
  background: #24C2B5;
  color: #fff;
  opacity: 0.5;
  border-radius: 8rpx;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
   position:absolute;
  left: 20rpx;
  right: 18rpx;
  bottom: 10rpx;
}
.schedule-footer.active{
  opacity: 1;
}