<view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">我关注的</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">我创建的</view>
</view>

<swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab">
    <swiper-item >
      <view wx:if="{{followList.length == 0}}" class="container">
        <text class="conferenceList-nickname" >你还没有关注的会议室</text>
        <form bind:submit="testSubmit" report-submit="true">
              <button formType="submit">发送模板消息</button>
        </form>
      </view>
      <view wx:for="{{followList}}" wx:key="">
        <text>{{item.name}}</text>
      </view>
     
    </swiper-item>
    <swiper-item>
    <view wx:if="{{createList.length == 0}}" class="container">
        <text class="conferenceList-nickname" >你还没有创建的会议室</text>
      </view>
      <view wx:for="{{createList}}" wx:key="">
        <text>{{item.name}}</text>
      </view>
    </swiper-item>
</swiper>