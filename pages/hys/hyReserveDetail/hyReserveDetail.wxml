<view class='hy'>
  <view class='hy-top'>
    <view class='hy-top-bg'>
      <image src='../../../image/bg.jpeg'></image>
    </view>
    <view class='hy-top-font' wx:for="{{hysConferenceList}}" wx:key="">
      <text>{{item.conferenceName}}</text>
      <text>{{item.remark}}</text>
    </view>
  </view>
</view>
 <view class='content' >

<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  
    <swiper-item wx:for="{{dataListAll}}" wx:key="" class='schedule-top' >
          <view class='schedule-col  {{date == items.time?"active":""}}' wx:for="{{item}}" wx:key="" wx:for-item="items" catchtap='clickDate' data-time='{{items.time}}'>
              <view class='schedule-col-t  {{date == items.time?"active":""}}' >{{items.day}}</view>
              <view class='schedule-col-b  {{date == items.time?"active":""}}'>{{items.week}}</view>
          </view>
    </swiper-item>

</swiper>
</view>
<view class='hy-main'>
  <view class='hy-title'>{{date}}</view>
  <view class='hy-row-wrap'>
    <view class='hy-row' catchtap='goScheduleDetail' data-id='{{item.id}}' wx:for="{{hysScheduleList[0]}}" wx:key="">
      <view class='hy-left'>
        <text>{{item.beginDate}}</text>
        <view class='line'>｜</view>
        <text>{{item.endDate}}</text>
     </view>
      <view class='hy-right'>
        <view class='hy-right-t'>{{item.theme}}</view>
        <view class='hy-right-b'>{{item.remark}}</view>
      </view>
    </view>
  </view>
</view>

  <view class='footer-nav'>
    <view class='footer-nav-col' catchtap='goConferenceList'>
      <image src='../../../image/footer-back.png'></image>
    </view>
    <view class='footer-nav-col3' data-randomid='{{hysConferenceList[0].randomId}}' catchtap='goReserve'>预定</view>
    <view class='footer-nav-col2' bindtap='getMore'>更多</view>
    <button class='footer-nav-col' open-type="share">
      <image src='../../../image/forwarding.png'></image>
    </button>
  </view>
